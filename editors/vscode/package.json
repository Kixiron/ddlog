{
    "name": "vscode-ddlog",
    "description": "Visual Studio Code client for the DDlog language server",
    "version": "0.0.1",
    "license": "MIT OR Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/Kixiron/ddlog.git"
    },
    "displayName": "vscode-ddlog",
    "publisher": "vmware",
    "engines": {
        "vscode": "^1.49.0"
    },
    "scripts": {
        "build": "tsc -p .",
        "lint": "eslint 'src/**/*.{js,ts,tsx}'",
        "watch": "tsc -watch -p ."
    },
    "devDependencies": {
        "@types/node": "^16.7.10",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "typescript": "^4.0.3",
        "vsce": "^1.96.1"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "enableProposedApi": true,
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:ddlog.dl",
        "onLanguage:ddlog.dat",
        "workspaceContains:**/*.dl",
        "workspaceContains:**/*.dat"
    ],
    "contributes": {
        "configurationDefaults": {
            "[ddlog.dl]": {
                "editor.semanticHighlighting.enabled": true
            },
            "[ddlog.dat]": {
                "editor.semanticHighlighting.enabled": true
            }
        },
        "languages": [
            {
                "id": "ddlog.dl",
                "extensions": [
                    ".dl"
                ],
                "aliases": [
                    "DDlog",
                    "ddlog",
                    "Differential Datalog"
                ],
                "configuration": "language-configuration.json"
            },
            {
                "id": "ddlog.dat",
                "extensions": [
                    ".dat"
                ],
                "aliases": [
                    "DDlog Command",
                    "ddlog command",
                    "Differential Datalog Command"
                ],
                "configuration": "language-configuration.json"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "ddlog.dl",
                "scopes": {}
            },
            {
                "language": "ddlog.dat",
                "scopes": {}
            }
        ]
    }
}
