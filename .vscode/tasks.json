{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run codegen",
            "type": "process",
            "command": "cargo",
            "args": [
                "xtask",
                "codegen"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "build ddlog-driver",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "ddlog-driver"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "dependsOn": [
                "run codegen"
            ]
        },
        {
            "label": "build extension",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build",
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc",
            ],
            "options": {
                "cwd": "${workspaceFolder}/editors/vscode"
            },
        },
        {
            "label": "build vsix",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "package",
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc",
            ],
            "options": {
                "cwd": "${workspaceFolder}/editors/vscode",
            },
            "dependsOn": [
                "build extension",
            ],
        },
        {
            "label": "Build Client + Server",
            "dependsOn": [
                "build vsix",
                "build ddlog-driver"
            ]
        }
    ]
}
