{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LSP Server",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ddlog-driver.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build ddlog-driver",
            "terminal": "external",
        },
        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"
            ],
            "preLaunchTask": "build vsix",
        }
    ],
    "compounds": [
        {
            "name": "Client + Server",
            "configurations": [
                "Launch Client",
                "Debug LSP Server"
            ]
        }
    ]
}
